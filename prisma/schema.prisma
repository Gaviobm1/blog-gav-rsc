generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL_DIRECT")
}

model Posts {
  id         Int       @id @default(autoincrement())
  title      String   @db.VarChar(500)
  href       String   @db.VarChar(500)
  abstract   String   @db.VarChar(5000)
  key        String   @db.VarChar(500)
  created_on DateTime @default(dbgenerated("CURRENT_DATE")) @db.Date

  @@map("posts")
}
